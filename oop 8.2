#include<iostream>
using namespace std;

class staff //class staff created
{
    protected:
    int code;
    char name[30];
    
    public:
    void staff_input() //member function for inputting staff code and name
    {
        cout<<"Enter staff code: ";
        cin>>code;
        cout<<"Enter your name: ";
        cin>>name;
        
    }
    void staff_display() //member function for displaying the staff details
    {
        cout<<"Your code: "<<code<<endl;
        cout<<"Your name: "<<name<<endl;
    }
};

